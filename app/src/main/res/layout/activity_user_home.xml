<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg2"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Başlık ve Açıklama -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"> <!-- Yuvarlak köşeler -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yol Bozukluklarını Tespit Edin, Çözümün Bir Parçası Olun!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yollarımızdaki bozukluklar sadece sürüş konforunu değil, güvenliğimizi de etkiliyor. Bu uygulama, sorunları tespit etmenizi ve çözümün bir parçası olmanızı sağlamak için tasarlandı!"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="6dp"
                    android:gravity="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Şu An Ne Yapabiliyoruz? -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"> <!-- Yuvarlak köşeler -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Şu An Ne Yapabiliyoruz?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Şu anda uygulamamız, yollardaki çukur tespiti yaparak ilgili birimlere bildirilmesini sağlıyor."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Gelecek Versiyonlar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"> <!-- Yuvarlak köşeler -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gelecek Versiyonlarda Neler Olacak?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daha fazla yol sorunu (örneğin, çatlaklar, bozulmuş yol çizgileri, su birikintileri) tespit edebilecek şekilde genişlemeyi hedefliyoruz. Sizden gelen geri bildirimlerle uygulamayı geliştirmeye devam edeceğiz!"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Neden Katkıda Bulunmalısınız? -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"> <!-- Yuvarlak köşeler -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neden Katkıda Bulunmalısınız?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚗 Daha Güvenli Yollar: Her bildirim, yollarımızın daha güvenli hale gelmesine katkı sağlar.\n🌍 Birlikte Daha Güçlüyüz: Küçük bir adım, büyük değişimlere yol açar.\n💡 Sizden Gelen Fikirler Değerli: Uygulamayı sizinle geliştiriyoruz."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Yol Bozukluğu Bildir Butonu -->
        <Button
            android:id="@+id/feedbackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yol Bozukluğu Bildir"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:backgroundTint="@color/purple_700"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp" />

    </LinearLayout>
</ScrollView>
